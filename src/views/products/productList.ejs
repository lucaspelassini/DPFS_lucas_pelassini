<!DOCTYPE html>
<html lang="es">

<%- include('../partials/head', { title: 'Productos - BotÃ¡nica.com', stylesheet: 'products' }) %>

<body>

<%- include('../partials/header') %>

<div class="container">
    <h2 class="page-title">Nuestros Productos</h2>

    <% if (locals.isLogged) { %>
            <a href="/products/create" class="btn-main">Crear Producto</a>
        <% } %>
    </div>

    <div class="products-grid">
        <% products.forEach(product => { %>
            <article class="product-card">
                <div class="product-image">
                    <img src="/img/<%= product.image %>" alt="<%= product.name %>">
                </div>
                <div class="product-info">
                    <h3><%= product.name %></h3>
                    <p class="price">$<%= product.price.toFixed(2) %></p>
                    <a href="/products/<%= product.id %>" class="btn-main">Ver Detalle</a>
                </div>
            </article>
        <% }); %>
    </div>
</div>

<%- include('../partials/footer') %>

</body>
</html>